<%- include('../partials/header') %>
<h1>文章管理</h1>
<a href="/admin/posts/new">新建文章</a>
<table class="table">
  <thead><tr><th>标题</th><th>状态</th><th>分类</th><th>更新时间</th><th>操作</th></tr></thead>
  <tbody>
    <% posts.forEach(post => { %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.status %></td>
        <td><%= post.Category ? post.Category.name : '-' %></td>
        <td><%= dayjs(post.updatedAt).format('YYYY-MM-DD HH:mm') %></td>
        <td>
          <a href="/admin/posts/<%= post.id %>/edit">编辑</a>
          <form method="post" action="/admin/posts/<%= post.id %>?_method=DELETE" style="display:inline">
            <button type="submit">删除</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>
